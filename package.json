{
  "name": "hair-trimmer-pro",
  "version": "2.0.0",
  "description": "Premium Hair Trimmer E-commerce System with PWA, Real-time Notifications & Advanced Features",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:prod": "NODE_ENV=production nodemon server.js",
    "prod": "NODE_ENV=production node server.js",
    "cluster": "NODE_ENV=production pm2 start server.js -i max",
    "build": "echo 'Building for production...'",
    "lint": "eslint server.js",
    "test": "jest",
    "deploy:vercel": "vercel --prod",
    "deploy:railway": "railway up",
    "deploy:heroku": "git push heroku main",
    "benchmark": "autocannon -c 100 -d 30 http://localhost:3000",
    "analyze": "node --inspect server.js",
    "health": "curl http://localhost:3000/health",
    "seed": "node seed.js",
    "backup": "cp database.sqlite database_backup_$(date +%Y%m%d_%H%M%S).sqlite",
    "optimize-images": "sharp optimize-images",
    "generate-sitemap": "node sitemap-generator.js",
    "security-check": "npm audit",
    "performance-test": "lighthouse http://localhost:3000 --view"
  },
  "keywords": [
    "ecommerce",
    "hair-trimmer",
    "pwa",
    "real-time",
    "express",
    "sqlite",
    "bangladesh",
    "responsive",
    "modern"
  ],
  "author": "Hair Trimmer Pro Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/hair-trimmer-pro.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/hair-trimmer-pro/issues"
  },
  "homepage": "https://hairtrimmerpro.com",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "compression": "^1.7.4",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.7.0",
    "cors": "^2.8.5",
    "ip": "^2.0.0",
    "sharp": "^0.32.0",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "uuid": "^9.0.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.0",
    "express-validator": "^6.15.0",
    "dotenv": "^16.0.3",
    "express-session": "^1.17.3",
    "connect-sqlite3": "^0.9.13",
    "morgan": "^1.10.0",
    "winston": "^3.8.2",
    "axios": "^1.4.0",
    "nodemailer": "^6.9.1",
    "twilio": "^4.10.0",
    "qrcode": "^1.5.3",
    "chart.js": "^4.3.0",
    "socket.io": "^4.6.1",
    "ws": "^8.13.0",
    "geoip-lite": "^1.4.6",
    "useragent": "^2.3.0",
    "ua-parser-js": "^1.0.35",
    "lru-cache": "^10.0.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "eslint": "^8.41.0",
    "prettier": "^2.8.8",
    "autocannon": "^7.11.0",
    "lighthouse": "^10.1.0",
    "pm2": "^5.3.0",
    "webpack": "^5.84.0",
    "webpack-cli": "^5.1.1",
    "css-minimizer-webpack-plugin": "^5.0.0",
    "terser-webpack-plugin": "^5.3.9",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "babel-loader": "^9.1.2",
    "@babel/core": "^7.22.1",
    "@babel/preset-env": "^7.22.2",
    "style-loader": "^3.3.2",
    "css-loader": "^6.8.1",
    "sass": "^1.62.1",
    "sass-loader": "^13.3.0",
    "postcss-loader": "^7.3.3",
    "postcss-preset-env": "^9.1.0",
    "mini-css-extract-plugin": "^2.7.6"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not op_mini all"
  ],
  "nodemonConfig": {
    "ignore": [
      "database.sqlite",
      "logs/*",
      "public/*"
    ],
    "ext": "js,json,html,css",
    "delay": "1000"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/tests/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 80
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": "latest"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "error",
      "eqeqeq": "error"
    }
  },
  "optionalDependencies": {
    "bufferutil": "^4.0.7",
    "utf-8-validate": "^5.0.10"
  },
  "peerDependencies": {
    "sharp": "^0.32.0"
  },
  "bundledDependencies": [
    "express",
    "sqlite3",
    "compression",
    "helmet"
  ],
  "private": true,
  "publishConfig": {
    "access": "restricted"
  },
  "contributors": [
    {
      "name": "Your Name",
      "email": "your.email@example.com"
    }
  ],
  "funding": {
    "type": "individual",
    "url": "https://buymeacoffee.com/yourprofile"
  }
}
